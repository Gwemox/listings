.container
  .row
    .top
      .col-xs-2
        %h1.title
          %a{:href => root_path} Listings
      .col-xs-10
        %div.pull-right
          - if user_signed_in?
            %a.logout{href: destroy_user_session_path, data: {method: 'delete'}}
              = t('logout')
            %a.my-account{href: '#'}
              = t('my_account')
          - else
            %a.my-account{href: new_user_session_path}
              = t('sign_in')
      .clearfix
